@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped table-hover">
   <thead class="thead-light">
    <tr>
        <th>Dni</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Ver</th>
        <th>Borrar</th>

        
   </thead>
<tbody>
    @foreach (var persona in ViewBag.lista)
    {
    <tr>
        <td>@persona.Dni</td>
        <td>@persona.Nombre</td>
        <td>@persona.Apellidos</td>
        <td><a href="VerPersona" class="btn btn-info">Ver</a></td>
        <td><a href="BorrarPersona" class="btn btn-danger">Borrar</a></td>

    </tr>
    }
</tbody>
</table>
